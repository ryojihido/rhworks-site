---
import Layout from '../layouts/Layout.astro';

const works = [
  { title: "高尾の天狗と脱・ハイヒール", url: "https://amzn.to/3VfQLyG", image: "takao_highheel.jpg" },
  { title: "高尾の天狗とミドリの平日", url: "https://amzn.to/3VlnXoA", image: "takao_midori.jpg" },
